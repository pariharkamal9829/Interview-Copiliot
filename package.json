{
  "name": "interview-copilot",
  "version": "1.0.0",
  "description": "WebSocket server for handling transcribed text in interview sessions",
  "main": "server-socketio.js",
  "scripts": {
    "start": "node server-socketio.js",
    "dev": "nodemon server-socketio.js",
    "test": "node test-system.js",
    "setup": "node quick-setup.js",
    "whisper": "node whisper-transcription.js",
    "install-deps": "npm install node-fetch",
    "check-env": "node -e \"require('dotenv').config(); console.log('Environment loaded:', Object.keys(process.env).filter(k => k.includes('OPENAI') || k.includes('PORT')));\""
  },
  "dependencies": {
    "ws": "^8.14.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "openai": "^4.24.1",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.2",
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "websocket",
    "transcription",
    "interview",
    "real-time"
  ],
